doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous")
    title OnlyMembers | #{title}
  body 
    nav(class="navbar navbar-expand-md bg-body-tertiary sticky-top")
      div(class="container-xxl")
        a(class="navbar-brand fw-bold text-secondary" href="/") OnlyMembers
        button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse justify-content-end align-center" id="main-nav")
          div.navbar-nav
            a(class="nav-link" href="/") Home
            if user 
              a(class="nav-link" href='/user/profile') Profile
              a(class='nav-link' herf='/user/artical') My Articals
              a(class="nav-link" href='/auth/logout') logout
            else
              a(class="nav-link" href='/auth/sign-up') Register
              a(class="nav-link" href='/auth/login') Sign In
              
    block content 
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous")